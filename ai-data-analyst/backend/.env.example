# AI Enterprise Data Analyst - Environment Variables Template
# Copy this to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="AI Enterprise Data Analyst"
APP_VERSION="3.0.0"
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text  # text or json

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_data_analyst
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_ORGANIZATION=org-your-org-id
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# =============================================================================
# Pinecone Configuration
# =============================================================================
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=ai-data-analyst

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-super-secret-key-at-least-32-characters-long
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4

# =============================================================================
# ML Configuration
# =============================================================================
ML_MODEL_STORAGE_PATH=./models
ML_DEFAULT_TEST_SIZE=0.2
ML_DEFAULT_RANDOM_STATE=42
ML_USE_GPU=false

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIRECTORY=./uploads
